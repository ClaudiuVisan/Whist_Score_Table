<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputResultsActivity">

    <TextView
        android:id="@+id/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/results"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/showBetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/results"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/playerName"
        android:textSize="30sp" />

    <RadioGroup
        android:id="@+id/first_groupRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showBetName"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn00"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:checked="false"
            android:elevation="4dp"
            android:padding="8dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@drawable/text_color"
            android:textSize="21sp" />

        <RadioButton
            android:id="@+id/btn01"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:checked="false"
            android:elevation="4dp"
            android:padding="8dp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@drawable/text_color"
            android:textSize="21sp" />

        <RadioButton
            android:id="@+id/btn02"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:checked="false"
            android:elevation="4dp"
            android:padding="8dp"
            android:text="2"
            android:textAlignment="center"
            android:textColor="@drawable/text_color"
            android:textSize="21sp" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/second_groupRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_groupRes"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn03"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:checked="false"
            android:elevation="4dp"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@drawable/text_color"
            android:textSize="21sp"
            android:layout_margin="16dp"
            android:text="3" />

        <RadioButton
            android:id="@+id/btn04"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:checked="false"
            android:elevation="4dp"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@drawable/text_color"
            android:textSize="21sp"
            android:layout_margin="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4" />

        <RadioButton
            android:id="@+id/btn05"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:checked="false"
            android:elevation="4dp"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@drawable/text_color"
            android:textSize="21sp"
            android:layout_margin="16dp"
            android:text="5" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/third_groupRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/second_groupRes"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn06"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:checked="false"
            android:elevation="4dp"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@drawable/text_color"
            android:textSize="21sp"
            android:layout_margin="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6" />

        <RadioButton
            android:id="@+id/btn07"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:checked="false"
            android:elevation="4dp"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@drawable/text_color"
            android:textSize="21sp"
            android:layout_margin="16dp"/>

        <RadioButton
            android:id="@+id/btn08"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:background="@drawable/radio_selector"
            android:button="@android:color/transparent"
            android:checked="false"
            android:elevation="4dp"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@drawable/text_color"
            android:textSize="21sp"
            android:text="8" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/third_groupRes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:onClick="onClickInputResult"
        android:text="@string/inputResult"
        android:background="@drawable/round_corner"
        android:textSize="24sp"/>
</RelativeLayout>